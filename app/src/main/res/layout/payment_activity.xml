<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_google_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">


        <TextView
            android:id="@+id/totalAmountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_horizontal"
            android:text="總金額:"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="108dp"
            android:layout_toEndOf="@+id/totalAmountTV"
            android:layout_toRightOf="@+id/totalAmountTV"
            android:textSize="25dp"
            tools:text="@string/textTotal" />

        <include
            android:id="@+id/btBuy"
            layout="@layout/payment_button"
            android:layout_width="230dp"
            android:layout_height="48sp"
            android:layout_below="@id/totalAmountTV"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />


        <TextView
            android:id="@+id/tvPaymentInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btBuy"
            android:layout_marginTop="15dp" />

        <Button
            android:id="@+id/btConfirmPay"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/btBuy"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:background="@drawable/main_button"
            android:text="@string/textConfirmPay"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btConfirmPay"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />




    </RelativeLayout>

</ScrollView>
